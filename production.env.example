# OMCRM Trading Platform - Simple Production Configuration
# Copy this file to .env and update the values for your deployment

# Application Settings
SECRET_KEY=omcrm-trading-secret-2024-change-this
FLASK_ENV=production
FLASK_DEBUG=0
PLATFORM_NAME=Wealth Venture

# Database Configuration (Simple SQLite)
DATABASE_URL=sqlite:///instance/site.db
SQLALCHEMY_DATABASE_URI=sqlite:///instance/site.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Optional Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=OMCRM Trading <noreply@your-domain.com>

# Optional Trading API Keys
ALPHAVANTAGE_API_KEY=your_alphavantage_key
FINNHUB_API_KEY=your_finnhub_key
BINANCE_API_KEY=your_binance_key
BINANCE_SECRET_KEY=your_binance_secret

# Domain Configuration (Optional)
DOMAIN_NAME=your-domain.com 