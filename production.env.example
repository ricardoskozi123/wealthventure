# Production Environment Configuration for OMCRM Trading Platform
# Copy this file to .env and update the values for your production deployment

# Application Settings
SECRET_KEY=your-super-secret-production-key-change-this-immediately-make-it-long-and-random
FLASK_ENV=production
FLASK_DEBUG=0
PLATFORM_NAME=OMCRM Trading

# Database Configuration
DATABASE_URL=sqlite:///instance/site.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost/omcrm_db

# Security Settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
REMEMBER_COOKIE_SECURE=true

# Email Configuration (for password resets, notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=OMCRM Trading <noreply@your-domain.com>

# Trading API Keys (optional - for enhanced market data)
ALPHAVANTAGE_API_KEY=your_alphavantage_key
FINNHUB_API_KEY=your_finnhub_key
BINANCE_API_KEY=your_binance_key
BINANCE_SECRET_KEY=your_binance_secret

# Domain Configuration
DOMAIN_NAME=your-domain.com
ADMIN_SUBDOMAIN=admin.your-domain.com

# Performance Settings
WORKERS=4
TIMEOUT=60
KEEPALIVE=5

# SSL Configuration (set to true when you have SSL certificates)
USE_SSL=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Analytics and Monitoring (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload Limits
MAX_UPLOAD_SIZE=16MB

# Time Zone
TIMEZONE=UTC

# CORS Settings (if needed for API access)
CORS_ORIGINS=https://your-domain.com,https://admin.your-domain.com 